<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scaled_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"/>
    <TextView
        android:id="@+id/scaled_y"
        android:layout_toRightOf="@id/scaled_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/raw_x"
        android:layout_below="@id/scaled_x"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"/>

    <TextView
        android:id="@+id/raw_y"
        android:layout_toRightOf="@id/raw_x"
        android:layout_below="@id/scaled_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/angle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/raw_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"/>
    <TextView
        android:id="@+id/quadrant"
        android:layout_below="@id/raw_y"
        android:layout_toRightOf="@id/angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.devpaul.analogsticklib.AnalogStick
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/analog_stick"
        app:outerCircleColor="@android:color/holo_blue_dark"
        app:centerStickColor="@android:color/holo_orange_dark"
        android:layout_width="250dip"
        android:layout_height="250dip" />

</RelativeLayout>
